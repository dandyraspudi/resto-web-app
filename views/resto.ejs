<%- include('partials/header', { title: 'Resto List' }) %>

<body>

    <div class="container">

        <h1 class="text-center font-weight-bold mb-5" style="font-family: 'Noto Sans', sans-serif;
        font-family: 'Roboto Condensed', sans-serif;font-size: 50px;">Resto List</h1>

<% if(session.isLogin && session.role === 'SU') {%>
    <a class="btn m-auto text-white pl-5 pr-5" style="font-size: 18px; font-weight: 500; border-radius: 5px; background-color: #F25C05;" href="/resto/add">Add resto</a>
    <a class="btn btn-primary" href="/user/register">Add Partner</a>

    <% } %>
        <div class="row d-flex justify-content-around">
    
    <div class="row d-flex justify-content-around mt-3">
    <% data.forEach(resto => { %>
        
                <div class="card mb-5" style="width: 20rem; border-radius: 25px !important;box-shadow: -2px 6px 44px 1px rgba(0,0,0,0.13);
            -webkit-box-shadow: -2px 6px 44px 1px rgba(112, 72, 72, 0.13);
            -moz-box-shadow: -2px 6px 44px 1px rgba(0,0,0,0.13);">
                    <img class="card-img-top" src="<%= getImage(resto.image_path) %>" alt="Card image cap" style="border-radius: 25px 25px 0px 0px !important; height: 250px;">
                    <div class="card-body">
                        <h5 style="font-family: 'Noto Sans', sans-serif;
                        font-family: 'Roboto Condensed', sans-serif;font-size: 26px;"><%= resto.name %></h5>
                        <p class="card-text" style="height:100px;"><%= resto.alamat %></p>
                        <p class="card-text" style="height:70px;">Available Seat : <%= resto.jumlah %></p>
                        <% if(session.isLogin && session.role === 'SU') {%>

                            <a class="text-white btn pt-2 pb-2" href="/resto/edit/<%=resto.id%>" style="background-color: rgb(48, 48, 238);">Edit</a>
                            <a class="btn pt-2 pb-2" href="/resto/delete/<%=resto.id%>" style="color: rgb(240, 18, 18); border: 2px solid rgb(240, 18, 18);font-weight: 500;">Delete</a>
                            <% } else { %>
                            <a onclick="window.location.href='/resto/<%=resto.id%>/menu'" class="btn pt-2 pb-2 pl-3 pr-3 text-white" style="border-radius: 5px; background-color: #F29F05;">Show Menu</a>

                            <% } %>
                    </div>
                </div>

                <% }) %>

        </div>
    
</body>

<%- include('partials/footer') %>