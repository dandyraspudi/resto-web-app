<%- include('partials/header', { title: 'HomePage'}) %>

<body style="background-color: #F2F2F2;">
    <div class="container">
        <form method="POST" action="/resto/add" enctype="multipart/form-data" class="p-5 border w-50 m-auto" style="border-radius: 35px;background-color: #fff;">
        <h1 class="text-center font-weight-bold mb-5" style="font-family: 'Noto Sans', sans-serif;
        font-family: 'Roboto Condensed', sans-serif;font-size: 50px;">Add Resto</h1>
        <% err.forEach(el => {%>
            <div class="alert alert-danger" role="alert">
                <%=el%>
            </div>
        <%}) %>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" placeholder="e.g: John Doe Resto">
            </div>
            <div class="mb-3">
                <label class="form-label">Alamat</label>
                <input type="text" class="form-control" name="alamat" placeholder="E.g: jl. street">
            </div>
            <div class="mb-5 border" style="height: 40px !important;border-radius: 5px;">
                <label for="" class="text-muted pt-2 pl-2 m-auto">Click to input image</label>
                <input type="file" id="myFile" name="file" onchange="loadFile(event)" style="opacity: 0;">
                <p class="ml-auto mt-3"><img id="output" width="150" /></p>
            </div>
            <div class="d-flex flex-row-reverse">
                <a type="button" class="btn" href="/resto" style="color: rgb(240, 18, 18); border: 2px solid rgb(240, 18, 18);">Cancel</a>
                <input type="submit" class="btn text-white pl-3 pr-3 mr-2" style="border-radius: 5px; background-color: #F29F05;"></input>
            </div>
        </form>
    </div>
</body>

<%- include('partials/footer') %>